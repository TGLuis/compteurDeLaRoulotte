<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- for the main counter -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/MCounter"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/main_counter_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/icon_main_counter"
            android:contentDescription="@string/main_counter_image"
            android:layout_marginStart="10dp"/>
        <!-- info about the main counter TODO better-->
    </LinearLayout>

    <!-- for the list of counters -->
    <ListView
        android:id="@+id/listCounters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/list_counter_item"
        app:layout_constraintTop_toTopOf="@id/MCounter"
        app:layout_constraintBottom_toBottomOf="@id/notes"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="86dp"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/notes"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopof="listCounters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/notes_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/icon_notes"
            android:contentDescription="@string/notes_image"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/notes_text"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mauve"
            android:text="@string/edit_notes"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>