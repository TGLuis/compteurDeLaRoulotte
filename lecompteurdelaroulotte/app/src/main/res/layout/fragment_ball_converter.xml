<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_converter_general"
    android:layout_margin="@dimen/min_margin_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number_of_balls_required"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_of_balls_required"
        android:ems="6"
        android:fontFamily="serif"
        android:textSize="@dimen/text_big"
        android:layout_margin="@dimen/min_margin_border"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/balls_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/zero"
        android:minEms="6"
        android:fontFamily="serif"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_big"
        android:layout_marginStart="@dimen/min_margin_border"
        android:nextFocusDown="@id/size_balls_required"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_of_balls_required"
        />

    <TextView
        android:id="@+id/size_of_balls_required"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size_of_balls_required"
        android:ems="6"
        android:fontFamily="serif"
        android:textSize="@dimen/text_big"
        android:layout_margin="@dimen/min_margin_border"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/balls_required"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/size_balls_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/zero"
        android:minEms="6"
        android:fontFamily="serif"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_big"
        android:layout_marginStart="@dimen/min_margin_border"
        android:nextFocusDown="@id/size_balls_available"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unit_balls_required"
        app:layout_constraintTop_toBottomOf="@id/size_of_balls_required"
        />

    <Spinner
        android:id="@+id/unit_balls_required"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/string_array_balls"
        app:layout_constraintBaseline_toBaselineOf="@id/size_balls_required"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/size_of_balls_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size_of_balls_available"
        android:ems="6"
        android:fontFamily="serif"
        android:textSize="@dimen/text_big"
        android:layout_margin="@dimen/min_margin_border"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/size_balls_required"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/size_balls_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/zero"
        android:minEms="6"
        android:fontFamily="serif"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_big"
        android:layout_marginStart="@dimen/min_margin_border"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unit_balls_available"
        app:layout_constraintTop_toBottomOf="@id/size_of_balls_available"
        />

    <Spinner
        android:id="@+id/unit_balls_available"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/string_array_balls"
        app:layout_constraintBaseline_toBaselineOf="@id/size_balls_available"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/number_of_balls_i_need"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_of_balls_i_need"
        android:ems="6"
        android:fontFamily="serif"
        android:textSize="@dimen/text_big"
        android:layout_margin="@dimen/min_margin_border"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/size_balls_available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/balls_i_need"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:ems="6"
        android:fontFamily="serif"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold"
        android:layout_margin="@dimen/text_big"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/number_of_balls_i_need"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>