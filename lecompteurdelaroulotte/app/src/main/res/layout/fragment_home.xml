<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test"
    >

    <ImageView
        android:id="@+id/bande"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:contentDescription="@string/banderole"
        android:src="@drawable/banderole_test"
        android:layout_marginBottom="12dp" />

    <ListView
        android:id="@+id/listProject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/list_project_item"
        app:layout_constraintTop_toTopOf="@id/bande"
        app:layout_constraintBottom_toBottomOf="@id/button_add_project"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/button_add_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_project"
        android:theme="@style/ButtonStyleDark"
        />

</android.support.constraint.ConstraintLayout>