<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ButtonStyleDark">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/mauve</item>
        <item name="android:textColorSecondary">@color/vert</item>
        <item name="android:colorButtonNormal">@color/mauve</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyleTrans" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:colorButtonNormal">@color/trans</item>
        <item name="strokeColor">@color/mauve</item>
        <item name="android:shape">@drawable/round_outlined</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mauve</item>
    </style>

</resources>
